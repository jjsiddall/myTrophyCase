<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title id='title'>HTML Page setup Tutorial</title>
        <script type="text/javascript">var switchTo5x=true;</script>
        <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
        <script type="text/javascript">stLight.options({publisher: "2c6d0e86-8332-4f19-85cc-fca844f187d3"}); </script>
    </head>
    <body>
<% tab "view" %>
<h2>My Profile</h2>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<p>
  <b><div class="flag flag-<%=@user.results[0].try(:country)%> showMe"></div></b>
</p>

<div class="row">
  <div class="span6">
    <h3>Races</h3>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Race Name</th>
          <th>Total Time</th>
          <th>Bib</th>
          <th>Division Rank</th>
          <th>Overall Rank</th>
          <th>Swim Time</th>
          <th>Bike Time</th>
          <th>Run Time</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @user.results.each do |result| %>
          <tr>
            <td><%= result.race.race_name %></td>
            <td><%= result.totalTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= result.bib %></td>
            <td><%= result.divisionRank %></td>
            <td><%= result.overallRank %></td>
            <td><%= result.swimTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= result.bikeTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= result.runTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= link_to 'Edit', edit_result_path( result), :class => "btn" %></td> 
            <td><%= link_to 'Destroy', result_url(result), :class => "btn btn-danger", method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="form-actions">
      <%= link_to 'Add a Race', search_path, :class => 'btn' %>
    </div>
  </div>

   <div class="span6 trophyHolder">
    <h3>Trophy Case</h3>
    <div class=" ui-widget-header" id="snaptarget">
    </div>
    <div class=" ui-widget-header" id="snaptarget">
    </div>
    <div class=" ui-widget-header" id="snaptarget">
    </div>

    <% @user.results.each do |result| %>
      <%= image_tag "#{result.race.distance}.png", :class => "draggable", :style=> "left: #{result.trophyPositionLeft}px; top: #{result.trophyPositionTop}px;", :data => {:trophyId => result.id} %>
    <% end %>
  
  </div>


</div>
