<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title id='title'>HTML Page setup Tutorial</title>
        <script type="text/javascript">var switchTo5x=true;</script>
        <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
        <script type="text/javascript">stLight.options({publisher: "2c6d0e86-8332-4f19-85cc-fca844f187d3"}); </script>
    </head>
    <body>
<h1>Trophy</h1>

<div class="row">
  <div class="span3">
  
    <dl class="dl-horizontal">

      <dt>Racer Name:</dt>
      <dd><%= @result.racerName %></dd>
      
      <dt>Bib:</dt>
      <dd><%= @result.bib %></dd>
      
      <dt>Country:</dt>
      <dd><div class="flag flag-<%= @result.country %> showMe"></div></dd>
      
      <dt>Division Rank:</dt>
      <dd><%= @result.divisionRank %></dd>

      <dt>Overall Rank:</dt>
      <dd><%= @result.overallRank %></dd>

      <hr>

      <dt>Swim Time:</dt>
      <dd><%= @result.swimTime.try(:strftime, "%H:%M:%S") %></dd>

      <dt>Bike Time:</dt>
      <dd><%= @result.bikeTime.try(:strftime, "%H:%M:%S") %></dd>

      <dt>Run Time:</dt>
      <dd><u><%= @result.runTime.try(:strftime, "%H:%M:%S") %></u></dd>

      <dt>Total Time:</dt>
      <dd><%= @result.totalTime.try(:strftime, "%H:%M:%S") %></dd>
    </dl>

    <div class="form-actions">
      <%= link_to 'View', user_path(session[:user_id]), :class => 'btn'  %>
      <%= link_to 'Edit', edit_result_path(@result), :class => 'btn' %>
      <%= link_to 'Delete', result_url(@result), :method => 'delete', :class => 'btn btn-danger' %>
    </div>
  </div>
</div>
<span class='st_facebook_hcount' displayText='Facebook'></span>
<span class='st_twitter_hcount' displayText='Tweet'></span>
<span class='st_fblike_hcount' displayText='Facebook Like'></span>
<span class='st_plusone_hcount' displayText='Google +1'></span>
<span class='st_email_hcount' displayText='Email'></span>
</body>
</html>