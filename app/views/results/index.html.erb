<% tab "claim" %>

<div class="row">
  <div class="span12">
    <h1>Listing results</h1>
    <%= link_to 'Add Another', new_result_path(current_user), :class => "btn btn-large pull-right" %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Racer Name</th>
          <th>Total Time</th>
          <th>Bib</th>
          <th>Country</th>
          <th>Division Rank</th>
          <th>Overall Rank</th>
          <th>Swim Time</th>
          <th>Bike Time</th>
          <th>Run Time</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |result| %>
          <tr>
            <td><%= link_to result.racerName, result %></td>
            <td><%= result.totalTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= result.bib %></td>
            <td><div class="flag flag-<%= result.country %> showMe"></div></td>
            <td><%= result.divisionRank %></td>
            <td><%= result.overallRank %></td>
            <td><%= result.swimTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= result.bikeTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= result.runTime.try(:strftime, "%H:%M:%S") %></td>
            <td><%= link_to 'Edit', edit_result_path(result), :class => "btn" %></td>
            <td><%= link_to 'Destroy', result_url(result), :class => "btn btn-danger", method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br />

<%= link_to 'Add Another', new_result_path(current_user), :class => "btn btn-large pull-right" %>
