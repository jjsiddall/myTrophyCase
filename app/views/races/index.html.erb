<h1>Listing races</h1>

<div class="row">
  <div class="span12">
    <button id="fetchIronmanRaces" class="btn btn-large btn-primary pull-right" type="button">Fetch Ironman Races</button>
  </div>
</div>
<br />
<div class="row">
  <div class="span12">
    <table id="racesTable" class="table table-striped table-condensed">
      <tr>
        <th>Race name</th>        
        <th>Race type</th>
        <th>Distance</th>
        
        <th>Race Year</th>        
        <th>Race Id</th>

        <th>City</th>
        <th>State</th>
        <th>Country</th>

        <th></th>
        <th></th>
      </tr>

      <% @races.each do |race| %>
        <%= render('race', :race => race) %>
      <% end %>
    
      <tr id="new_race_tr"><%= render 'form' %></tr>
    
    </table>
  </div>
</div>

