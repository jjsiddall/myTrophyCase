<div class="row">
  <div class="span12">
  	<button id="fetchIronmanRaceIds" class="btn btn-large btn pull-right" type="button">Fetch Ironman Race IDs</button>
  	<button id="fetchIronmanRaces" class="btn btn-large btn-primary pull-right" type="button">Fetch Ironman Races</button>
  </div>
</div>
<br />
<div class="row">
  <div class="span12">
    <table id="newRacesTable" class="table table-striped table-condensed">
	  <thead>
	    <tr>
	        <th>Race name</th>        
	        <th>Race type</th>
	        <th>Distance</th>
	        
	        <th>Race Year</th>        
	        <th>Race Id</th>

	        <th>Location</th>

	        <th></th>
	        <th></th>
	        <th></th>
	    </tr>
	  </thead>
	  <tbody>



	  </tbody>
	</table>
  </div>
</div>

<h1>Saved Races: <span id='numberOfSavedRaces'><%= @races.count %></span></h1>
<div class="row">
  <div class="span12">
    <table id="savedRacesTable" class="table table-striped table-condensed">
	  <thead>
	    <tr>
	        <th>Race name</th>        
	        <th>Race type</th>
	        <th>Distance</th>
	        
	        <th>Race Year</th>        
	        <th>Race Id</th>

	        <th>Location</th>

	        <th></th>
	        <th></th>
	        <th></th>
	    </tr>
	  </thead>
	  <tbody>


		<% @races.each do |race| %>
		  <%= render('race', :zebra => race) %>
		<% end %>
		
		<tr id="new_race_tr"><%= render 'form', :fullEdit => true %></tr>


	  </tbody>
	</table>
  </div>
</div>




