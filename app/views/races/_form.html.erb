<%= form_for(@race, :remote => true, :html => { :class => "form-inline"}) do |f| %>
	
  <% if fullEdit %>

    <td><%= f.text_field :race_name, :class => "input-xlarge", :placeholder => "Name" %></td>
    <td><%= f.text_field :race_type, :class => "input-mini", :placeholder => "Type" %></td>
    <td><%= f.text_field :distance, :class => "input-mini", :placeholder => "Distance" %></td>
    <td><%= f.text_field :year, :class => "input-mini", :placeholder => "Year" %></td>
    <td><%= f.text_field :race_id, :class => "input-mini", :placeholder => "ID" %></td>

	  <td><%= f.text_field :location, :class => "input-mini", :placeholder => "City" %></td>

    <td><%= f.submit "Add", :class => "btn btn-success" %></td>
    <td></td>
    <td></td>
  <% else %>

    <td><%= f.text_field :race_id, :class => "input-mini", :placeholder => "ID" %></td>

    <td><%= f.submit "Chg ID", :class => "btn btn-inverse" %></td>

  <% end %>
<% end %>
